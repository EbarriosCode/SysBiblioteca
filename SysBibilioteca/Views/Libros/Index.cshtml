@model IEnumerable<SysBibilioteca.Models.Libro>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <br />
    <a asp-action="Create" class="btn btn-info">Crear <i class="glyphicon glyphicon-plus"></i></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paginas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ejemplares)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paginas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ejemplares)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Autor.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Editorial.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ubicacion.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LibroId" class="btn btn-success"><i class="glyphicon glyphicon-pencil"></i></a>
                <a asp-action="Details" asp-route-id="@item.LibroId" class="btn btn-primary"><i class="glyphicon glyphicon-eye-open"></i></a>
                <a asp-action="Delete" asp-route-id="@item.LibroId" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
